{
  "manifest_version": 3,
  "name": "OSINT Agent Companion",
  "version": "1.0.0",
  "description": "Browser companion for OSINT Agent Orchestra - enables scraping of protected sites like Whitepages",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.whitepages.com/*",
    "https://whitepages.com/*",
    "https://www.truepeoplesearch.com/*",
    "https://www.fastpeoplesearch.com/*",
    "https://www.spokeo.com/*",
    "https://www.beenverified.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.whitepages.com/*",
        "https://whitepages.com/*"
      ],
      "js": ["content-scripts/whitepages.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.truepeoplesearch.com/*"
      ],
      "js": ["content-scripts/truepeoplesearch.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.fastpeoplesearch.com/*"
      ],
      "js": ["content-scripts/fastpeoplesearch.js"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.lovableproject.com/*",
      "https://*.lovable.app/*",
      "http://localhost:*/*"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
